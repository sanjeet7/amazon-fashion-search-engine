# Amazon Fashion Search Engine - Environment Configuration
# Copy this file to .env and set your values

# Required: OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Data Pipeline Configuration
DATA_SAMPLE_SIZE=50000
DATA_BATCH_SIZE=100
EMBEDDING_MODEL=text-embedding-3-small

# Search API Configuration  
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Development Settings
LOG_LEVEL=INFO
DEVELOPMENT_MODE=true
USE_SAMPLE_DATA=false

# Paths (automatically configured)
RAW_DATA_PATH=data/raw/meta_Amazon_Fashion.jsonl
SAMPLE_DATA_PATH=data/sample_500_products.jsonl
PROCESSED_DATA_DIR=data/processed
EMBEDDINGS_DIR=data/embeddings